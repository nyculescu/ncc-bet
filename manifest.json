{
    "manifest_version": 2,

    "name": "Dabster Bet",
    "description": "Your knowledge in sports betting will be more valuable with us. Type 'bet' in search tab, then press tab key to get more help.",
    "version": "1.1",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Increase your fortune now!"
    },

    "content_security_policy": "script-src 'self'; object-src 'self'; frame-src http://www.facebook.com https://www.facebook.com",

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],

    "omnibox": {
        "keyword": "bet"
    }
}